header.header
    nav.nav.nav--tours
        a.nav__el(href="/") All Tour
        form.nav__search(action="")
            button.nav__search-btn
                svg
                    use(xlink:href="/img/icons.svg#icon-search")
            input.nav__search-input(type="text"
        placeholder="Search tours")
    div.header__logo
        img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user
        if user
            button#logout.nav__el.nav__el--logout Log out
            a.nav__el(href="#")
                img(src=`/img/users/${user.photo}` alt=`${user.name}` class="nav__user-img")
                span= user.name.split(" ")[0]
        else
            a.nav__el(href="/login") Log in
            a.nav__el.nav__el--cta(href="/signp") Sign up